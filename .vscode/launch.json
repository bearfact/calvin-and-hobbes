  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nodemon",
      "runtimeExecutable": "nodemon",
      "args": ["${workspaceRoot}/app/server.js"], //this needs to be the entry point of your appliction
      "restart": true,
      "protocol": "inspector",
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/app/server.js"
    }
  ]
}